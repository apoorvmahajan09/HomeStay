<% layout("layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3 mb-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>

        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image?.url %>" class="card-img-top show-img mb-3" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.title %>
                </p>
                <p class="card-text">
                    <%= listing.description %>
                </p>
                <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
                <p class="card-text">
                    <i class="fa-solid fa-location-dot"></i>
                    <%= listing.location %>, <%= listing.country %>
                </p>

                <!-- ðŸ”¹ New View Map Button -->
                <div class="m-3">
                    <button class="btn btn-outline-primary w-100" id="viewMapBtn"
                        data-lat="<%= listing.geometry?.coordinates?.[1] %>"
                        data-lng="<%= listing.geometry?.coordinates?.[0] %>" data-bs-toggle="modal"
                        data-bs-target="#mapModal">

                        <i class="fa-solid fa-map-location-dot"></i> View on Map
                    </button>
                </div>
            </div>
            <div class="card-footer text-muted">
                Added by <b>
                    <%= listing.owner.username %>
                </b>
            </div>
        </div>

        <!-- ðŸ”¹ Map Modal / Container (hidden initially) -->
        <div id="mapModal" class="modal fade" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Location - <%= listing.title %>
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" style="height: 500px;">
                        <div id="mapContainer" style="height:100%; width:100%"></div>
                    </div>
                </div>
            </div>
        </div>

        <br>
        <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
            <div class="col-8 offset-3 mb-3">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark mx-4">Edit</a>
                <form class="d-inline" method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <% } %>
                <hr class="mt-3">
                <% if(currentUser) { %>
                    <div class="col-8 offset-3 mt-3 mb-5">
                        <form action="/listings/<%= listing._id %>/reviews?_method=POST" method="post" novalidate
                            class="needs-validation">
                            <h4>Leave a Review</h4>
                            <fieldset class="starability-slot">
                                <legend>First rating:</legend>
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0"
                                    checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>

                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>

                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>

                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>

                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>

                            </fieldset>
                            <br>
                            <label for="comment">Comment</label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                                required></textarea>
                            <div class="invalid-feedback">Please enter a comment</div>
                            <br>
                            <button class="btn btn-dark">Submit Review</button>
                        </form>
                    </div>
                    <hr>
                    <% } %>
                        <div class="col-8 offset-3 mb-5">
                            <h4>All Reviews</h4>
                            <% for(review of listing.reviews) { %>
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h5 class="card-title">By : <%= review.author.username %>
                                        </h5>
                                        <p class="starability-result card-text" data-rating="<%= review.rating %>">
                                        </p>
                                        <p class="card-text">
                                            <%= review.comment %>
                                        </p>
                                        <p class="card-text"><small class="text-muted">Reviewed on <%=
                                                    review.createdAt.toDateString() %>
                                            </small></p>
                                    </div>
                                    <form class="mb-3" method="post"
                                        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                        <button class="btn btn-sm btn-dark">Delete</button>
                                    </form>
                                </div>
                                <% } %>
                        </div>